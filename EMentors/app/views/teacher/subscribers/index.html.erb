<div class="d-flex align-items-center justify-content-center">
    <h3>Hello <%= current_user.first_name %>, Your Subscribers list:</h3>
</div>
<br><br>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th> First Name </th>
            <th> Last Name </th>
            <th> Email </th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.first_name %> </td>
                <td><%= user.last_name%> </td>
                <td><%= user.email %></td>
            </tr>
        <% end %>
    </tbody>
</table>